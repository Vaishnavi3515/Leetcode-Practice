class Solution {
public:
    int minimumSum(int num) {
        int ones = num % 10; num /= 10;
        int tens = num % 10; num /= 10;
        int huns = num % 10; num /= 10;
        int thous = num % 10;
        
        int arr[4] = {ones, tens, huns, thous};
        std::sort(arr, arr + 4); //  Fixed sort
        
        int new1 = (arr[0] * 10) + arr[2]; //  Correct
        int new2 = (arr[1] * 10) + arr[3]; //  Correct
        return new1 + new2;
    }
};
